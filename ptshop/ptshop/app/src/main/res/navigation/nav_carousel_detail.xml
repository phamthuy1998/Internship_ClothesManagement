        android:name="com.ptithcm.ptshop.view.wishlist.OverViewFragment"
        tools:layout="@layout/fragment_over_view"/>

    <fragment
        android:id="@+id/sizeGuideFragment"
        tools:layout="@layout/fragment_size_guide"
