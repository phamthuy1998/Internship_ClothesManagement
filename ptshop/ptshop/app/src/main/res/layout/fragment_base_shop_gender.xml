<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="fragment"
            type="com.ptithcm.ptshop.view.shop.BaseShopGenderFragment" />

        <variable
            name="carousels_size"
            type="String" />

    </data>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/layout_margin_16dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvCarousel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_margin_16dp"
                android:clipToPadding="false"
                android:paddingStart="@dimen/layout_margin_8dp"
                android:paddingEnd="@dimen/layout_margin_8dp"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent" />

            <ProgressBar
                android:id="@+id/progressBarLine"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="@dimen/image_270dp"
                android:layout_height="@dimen/layout_margin_2dp"
                android:layout_margin="@dimen/layout_margin_16dp"
                android:indeterminate="false"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rvCarousel" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvCountPager"
                style="@style/normal_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_margin_8dp"
                android:textColor="@color/gray_stroke"
                app:curPage="@{fragment.curCarousel}"
                app:layout_constraintEnd_toEndOf="@id/progressBarLine"
                app:layout_constraintTop_toBottomOf="@id/progressBarLine"
                app:pageSize="@{carousels_size}" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvPopularCategories"
                style="@style/normal_text.SemiBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/layout_margin_16dp"
                android:layout_marginTop="4dp"
                android:text="@string/all_categories"
                android:textAllCaps="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvCountPager" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvPopularCategories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_margin_16dp"
                android:nestedScrollingEnabled="false"
                android:layout_marginStart="@dimen/layout_margin_16dp"
                android:layout_marginEnd="@dimen/layout_margin_16dp"
                app:layout_constraintTop_toBottomOf="@id/tvPopularCategories" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</layout>