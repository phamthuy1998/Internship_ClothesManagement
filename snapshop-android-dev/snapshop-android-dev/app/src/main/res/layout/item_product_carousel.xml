<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="product"
            type="com.sg.core.model.Product" />

        <variable
            name="locale"
            type="java.util.Locale" />

        <variable
            name="isPriceCash"
            type="Boolean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/layout_margin_8dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivImage"
            android:layout_width="@dimen/image_200dp"
            android:layout_height="@dimen/image_250dp"
            android:src="@drawable/img_banner"
            app:imageUrl="@{product.image.size() > 0 ? product.image.get(0).src : ``}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:placeHolder="@{@drawable/ic_place_holder}" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivStar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_margin_16dp"
            android:padding="@dimen/layout_margin_16dp"
            android:src="@drawable/bg_star_active"
            app:layout_constraintEnd_toEndOf="@id/ivImage"
            app:layout_constraintTop_toTopOf="@id/ivImage" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvName"
            style="@style/normal_text.SemiBold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_margin_8dp"
            android:textSize="@dimen/text_size_11sp"
            android:text="@{product.vendor}"
            android:textAllCaps="true"
            app:layout_constraintTop_toBottomOf="@id/ivImage" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvDescription"
            style="@style/normal_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:textSize="@dimen/text_size_11sp"
            android:maxLines="1"
            android:padding="@dimen/layout_margin_4dp"
            android:text="@{product.title}"
            android:textColor="@color/gray_stroke"
            app:layout_constraintTop_toBottomOf="@id/tvName" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPriceBase"
            style="@style/normal_text.SemiBold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/layout_margin_4dp"
            android:textSize="@dimen/text_size_11sp"
            android:visibility="@{isPriceCash == true ? View.GONE : View.VISIBLE}"
            app:layout_constraintTop_toBottomOf="@id/tvDescription"
            app:locale="@{locale}"
            app:textPrice="@{product.variants.size() > 0 ? product.variants.get(0).price_after_tax : ``}" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPrice"
            style="@style/normal_text.SemiBold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/layout_margin_4dp"
            android:textSize="@dimen/text_size_11sp"
            android:textColor="@color/colorTextDiscount"
            android:visibility="@{isPriceCash == true ? View.VISIBLE : View.GONE}"
            android:textAlignment="viewEnd"
            app:layout_constraintEnd_toStartOf="@id/tvPriceCash"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvPriceBase"
            app:locale="@{locale}"
            app:textPrice="@{product.variants.size() > 0 ? product.variants.get(0).price_after_tax : ``}" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPriceCash"
            style="@style/normal_text.SemiBold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/layout_margin_4dp"
            android:textSize="@dimen/text_size_11sp"
            android:visibility="@{isPriceCash == true ? View.VISIBLE : View.GONE}"
            android:textAlignment="viewStart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tvPrice"
            app:layout_constraintTop_toBottomOf="@id/tvPriceBase"
            app:locale="@{locale}"
            app:textPrice="@{product.variants.size() > 0 ? product.variants.get(0).compare_at_price_after_tax : ``}" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>