<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View"/>

        <variable
            name="data"
            type="com.sg.core.model.ProductVariant" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/layout_margin_16dp" >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivProduct"
            android:layout_width="@dimen/no_padding"
            android:layout_height="@dimen/no_padding"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:layout_constraintWidth_percent="0.2"
            app:layout_constraintDimensionRatio="0.7"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="@{data.applied_discount != null ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="@id/ivProduct"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintEnd_toEndOf="@id/ivProduct"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/ivProduct"
            app:layout_constraintTop_toTopOf="@id/ivProduct"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintWidth_percent="0.1"
            app:srcCompat="@drawable/ic_sale_maker" />

        <include
            android:id="@+id/discountInfo"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:visibility="@{data.applied_discount != null ? View.VISIBLE : View.GONE}"
            layout="@layout/layout_discount_info"
            android:layout_marginStart="@dimen/layout_margin_8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivProduct"
            app:layout_constraintEnd_toStartOf="@id/tvQuantity"
            app:layout_constraintBottom_toTopOf="@id/tvPrice"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPrice"
            style="@style/normal_text.bold"
            android:visibility="@{data.product_variant.compare_at_price_after_tax == null ? View.VISIBLE : View.INVISIBLE}"
            android:layout_marginStart="@dimen/layout_margin_8dp"
            app:layout_constraintStart_toEndOf="@id/ivProduct"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.3"
            tools:text="27.84" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvDiscountPrice"
            style="@style/normal_text.bold"
            android:visibility="@{data.product_variant.compare_at_price_after_tax == null ? View.GONE : View.VISIBLE}"
            android:textColor="@color/colorTextDiscount"
            android:layout_marginStart="@dimen/layout_margin_8dp"
            app:layout_constraintStart_toEndOf="@id/ivProduct"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.3"
            tools:text="$39.19" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvOriginPrice"
            style="@style/normal_text"
            android:visibility="@{data.product_variant.compare_at_price_after_tax == null ? View.GONE : View.VISIBLE}"
            android:layout_marginStart="@dimen/layout_margin_8dp"
            app:layout_constraintTop_toTopOf="@id/tvDiscountPrice"
            app:layout_constraintStart_toEndOf="@id/tvDiscountPrice"
            tools:text="$70.54"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTitle"
            style="@style/normal_text.grey"
            android:layout_width="0dp"
            android:text="@{data.product_variant.product.title}"
            android:lines="1"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/layout_margin_4dp"
            android:layout_marginStart="@dimen/layout_margin_8dp"
            android:layout_marginEnd="@dimen/layout_margin_8dp"
            app:layout_constraintTop_toBottomOf="@id/tvPrice"
            app:layout_constraintStart_toEndOf="@id/ivProduct"
            app:layout_constraintEnd_toStartOf="@id/tvQuantity"
            app:layout_constraintHorizontal_bias="0"
            tools:text="Beige Sweater"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvQuantity"
            style="@style/normal_text.bold"
            android:text="@{@string/quantity_x(data.quantity)}"
            app:layout_constraintTop_toTopOf="@id/ivProduct"
            app:layout_constraintBottom_toBottomOf="@id/ivProduct"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="x64" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>