<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="fragment"
            type="com.sg.snapshop.view.card.CheckoutFragment" />

        <variable
            name="discount"
            type="com.sg.core.model.Discount" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:orientation="vertical">

        <com.dinuscxj.refresh.RecyclerRefreshLayout
            android:id="@+id/swipeRfCheckout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <androidx.core.widget.NestedScrollView
                android:id="@+id/nestedScrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clContainer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="@dimen/layout_margin_16dp"
                    android:paddingBottom="@dimen/size_100dp"
                    android:clipToPadding="false"
                    android:visibility="gone">

                    <include
                        android:id="@+id/shipping_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        layout="@layout/item_shipping_address"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvBrandCheckout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/layout_margin_16dp"
                        android:nestedScrollingEnabled="false"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        app:layout_constraintTop_toBottomOf="@id/shipping_address"
                        tools:itemCount="2"
                        tools:listitem="@layout/item_brand_checkout"/>

                    <include
                        android:id="@+id/includePayment"
                        layout="@layout/item_payment_checkout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/layout_margin_16dp"
                        app:layout_constraintTop_toBottomOf="@id/rvBrandCheckout" />

                    <include
                        android:id="@+id/billing_address"
                        layout="@layout/item_billing_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/layout_margin_16dp"
                        app:layout_constraintTop_toBottomOf="@id/includePayment"/>

                    <include
                        android:id="@+id/includeDiscount"
                        layout="@layout/item_discount_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/layout_margin_16dp"
                        android:visibility="@{discount == null ? View.VISIBLE : View.INVISIBLE}"
                        app:layout_constraintTop_toBottomOf="@id/billing_address" />

                    <include
                        android:id="@+id/includeHasDiscount"
                        layout="@layout/item_have_discount_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="@{discount != null ? View.VISIBLE : View.INVISIBLE}"
                        app:discount="@{discount}"
                        app:layout_constraintTop_toTopOf="@id/includeDiscount"
                        app:layout_constraintBottom_toBottomOf="@id/includeDiscount" />

                    <include
                        android:id="@+id/includeTaxCheckout"
                        layout="@layout/layout_tax_checkout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/layout_margin_16dp"
                        app:layout_constraintTop_toBottomOf="@id/includeDiscount" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvAccept"
                        style="@style/normal_text.grey"
                        android:text="@string/i_accept"
                        android:textSize="@dimen/text_size_14sp"
                        android:layout_width="@dimen/no_padding"
                        android:paddingStart="@dimen/layout_margin_16dp"
                        android:paddingEnd="@dimen/no_padding"
                        app:layout_constraintTop_toBottomOf="@id/includeTaxCheckout"
                        app:layout_constraintStart_toStartOf="@id/includeTaxCheckout"
                        app:layout_constraintWidth_percent="0.6" />

                    <com.suke.widget.SwitchButton
                        android:id="@+id/sbAccept"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:sb_show_indicator="false"
                        app:sb_checked_color="@color/black"
                        app:sb_uncheck_color="@color/colorBackground"
                        app:layout_constraintTop_toTopOf="@id/tvAccept"
                        app:layout_constraintBottom_toBottomOf="@id/tvAccept"
                        app:layout_constraintEnd_toEndOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.core.widget.NestedScrollView>

        </com.dinuscxj.refresh.RecyclerRefreshLayout>

        <com.sg.snapshop.widget.LoadingButton
            android:id="@+id/btnCheckOut"
            style="@style/black_btn"
            android:background="@drawable/button_selector"
            android:enabled="false"
            android:visibility="gone"
            android:onClick="@{fragment::onClick}"
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            android:layout_marginTop="@dimen/layout_margin_32dp"
            android:layout_marginBottom="@dimen/layout_margin_16dp"
            android:layout_marginStart="@dimen/layout_margin_16dp"
            android:layout_marginEnd="@dimen/layout_margin_16dp"
            app:text="@string/place_order"
            app:isShowTextBehind="true"
            app:outOfStock="true"/>

    </LinearLayout>
</layout>